{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    "rootDir": "src"
  },
  "include": ["src"]
}
